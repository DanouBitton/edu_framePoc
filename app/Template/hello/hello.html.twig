{% extends "base.html.twig" %}

{% block title %}{{ titre }}{% endblock %}

{% block content %}
    <h1>{{ titre }}</h1>
    {% for ville in listVilles %}
        {{ ville.id }} - {{ ville.nom }}<a href="/bonjour?id_ville={{ ville.id }}&crud=delete">supprimer</a><br>
        <a href="/bonjour?id_ville={{ ville.id }}&crud=update">modifier</a> <br>
    {% endfor %}
    <p>Cr√©er une nouvelle ville</p>

        <form action="/bonjour" method="post">
            <label for="ville">Ville</label>
            <input type="hidden" value="{{ crud }}" name="crud">
            <input type="text" name="nom" id="nom" value="{{ ville.nom }}">
            <input type="hidden" value="{{ ville.id }}" name="id_ville">
            <button type="submit">Envoyer</button>
        </form>

{% endblock %}

